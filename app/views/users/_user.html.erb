<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Job position:</strong>
    <%= user.job_position %>
  </p>

  <p>
    <strong>Bsic Salary:</strong>
    <%= user.salary %>
  </p>

  <p>
    <strong>Dob:</strong>
    <%= user.dob %>
  </p>

  <p>
    <strong>Job type:</strong>
    <%= user.job_type %>
  </p>

  <p>
    <strong>Joining Date:</strong>
    <%= user.joining_date %>
  </p>

  <p>
    <strong>Leaving Date Date:</strong>
    <%= user.leaving_date || "Currently Working here" %>
  </p>

</div>
